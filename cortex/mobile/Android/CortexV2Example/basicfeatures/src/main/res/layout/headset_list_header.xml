<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headsetTable"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="20dp"
    >

    <LinearLayout
        android:id="@+id/headsetListHeader"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#e9e9e9"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHeadsetName"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.4"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:text="Headset Name (ID)"
            android:textSize="13dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.25">

            <TextView
                android:id="@+id/tvHeadsetConnectedBy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:text="Connected By"
                android:textSize="13dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="#a7a7a7" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.2">

            <TextView
                android:id="@+id/tvHeadsetStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="2dp"
                android:text="Status"
                android:textSize="13dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="#a7a7a7" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.15">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="2dp"
                android:text="Virtual"
                android:textSize="13dp" />

            <View
                android:id="@+id/view3"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="#a7a7a7" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>